/* pages/group/addwork/addwork.wxss */
form{
  width:100%;
  padding:0 30rpx;
  box-sizing: border-box;
}
form view:nth-child(1){
  height: 100rpx;
  width:100%;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}
label{
  padding-right:20rpx;
}
label image{
  width:32rpx;
  height:31rpx;
  padding-top:10rpx;
}
form input{
  font-size:28rpx;
  width:500rpx;
}
form textarea{
  font-size:28rpx;
  padding:25rpx;
  min-height: 300rpx;
}
.btn{
  width:600rpx;
  height:90rpx;
  border-radius:10rpx;
  background-color:#c1403e;
  line-height: 90rpx;
  margin:0 auto;
  color:#fff;
  text-align: center;
  margin-top:30rpx;
}